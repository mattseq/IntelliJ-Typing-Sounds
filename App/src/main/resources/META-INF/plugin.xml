<idea-plugin>
    <id>dk.project.app</id>
    <name>Keyboard Typing Sounds</name>
    <version>1.4.0</version>
    <vendor email="cph-jl325@stud.ek.dk" url="https://github.com/Guacamoleboy/IntelliJ-Typing-Sounds">Guacamoleboy</vendor>

    <description>
        Plays keyboard typing sounds in IntelliJ IDEA, similar to Opera GX.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <startupActivity implementation="dk.project.event.BuildSoundStartup"/>
        <editorFactoryListener implementation="dk.project.keyboard.KeyboardSoundListener"/>
        <applicationConfigurable instance="dk.project.app.SettingsConfigurable"
                                 displayName="Typing Sounds"/>
    </extensions>

</idea-plugin>